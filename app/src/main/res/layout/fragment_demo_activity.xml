<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sidegigapps.pianoteacher.DemoActivityFragment"
    tools:showIn="@layout/activity_demo_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewMidiStatus"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:text="MIDI STATUS"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />
        <TextView
            android:id="@+id/textViewNoteStatus"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:text="NOTE STATUS"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />


    </LinearLayout>



</FrameLayout>
